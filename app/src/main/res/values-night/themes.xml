<resources>
    <!-- Base application theme. -->
    <style name="Theme.MovieList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_grey_900</item>
        <item name="colorPrimaryVariant">@color/blue_grey_900_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_600</item>
        <item name="colorSecondaryVariant">@color/orange_600_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >
            ?attr/colorPrimaryVariant
        </item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/black</item>
    </style>
</resources>