<resources >
    <!-- Base application theme. -->
    <style name="Theme.MovieList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_grey_900</item>
        <item name="colorPrimaryVariant">@color/blue_grey_900_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_600</item>
        <item name="colorSecondaryVariant">@color/orange_600_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >
            ?attr/colorPrimaryVariant
        </item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/recycler_view_background_grey</item>
    </style>

    <style name="Theme.MovieList.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MovieList.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MovieList.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Стиль для TextView (как заголовка, так и описания), используемого в макете пункта списка item_movie.xml -->
    <style name="ItemTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">@dimen/list_item_margin</item>
        <item name="android:layout_marginEnd">@dimen/list_item_margin_half</item>
        <item name="android:layout_marginTop">@dimen/list_item_margin_half</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>